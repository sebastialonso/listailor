<p>Crea tus super listas públicas! Wow que bacán</p>
<a><%= link_to "Crea una lista", new_list_path, :class => "btn btn-info btn-large" %> </a>
<% if not @lists.empty? %>
  <% @lists.each do |list| %>
  <p> 
    <span class="list-name"><%= link_to "#{list.name}", list_path(list) %></span>
    <br> 
    <span class="tag tag-author"> <i class="icon-user"></i> <b><%= list.user.username %></b></span>
    <% if not list.tags.empty? %> 
      <%  list.tags.each do |tag|%>
         <span class="tag"> <%= tag.name %> </span>
      <% end %>
    <% end %>
    <span class="tag tag-suscribed"> <i class="icon-star"></i> <%=list.users.length %> </span> 
    <span class="tag tag-video"> <i class="icon-facetime-video"></i> <%=  list.videos.count %></span>
    <small><%= list.description %></small> 
    <% if user_signed_in? && !is_subscribed(current_user, list) %>
      | <%= link_to "Join", join_path(:id => list.id) %>
    <% end %>

  </p>
  <% end %>
<% end %>
